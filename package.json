{
  "name": "cultural-asset-trader",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:5657": "vite --port 5657",
    "dev:3000": "vite --port 3000",
    "start": "vite",
    "build": "vite build && npm run sanitize:dist-css",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "sanitize:dist-css": "node scripts/sanitize-css.mjs dist/assets",
    "sanitize:postcss-css": "node scripts/sanitize-css.mjs postcss/styles",
    "check:css-compat": "node scripts/check-css-compat.mjs",
    "verify": "npm run test && npm run typecheck && npm run build && npm run check:css-compat",
    "buildcss": "postcss src/styles/*.css --dir postcss/styles && npm run sanitize:postcss-css"
  },
  "dependencies": {
    "bankcard": "^3.1.5",
    "decimal.js": "^10.6.0",
    "element-china-area-data": "^6.1.0",
    "lucide-react": "^0.554.0",
    "md5": "^2.3.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.12.0",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@csstools/postcss-cascade-layers": "^6.0.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-legacy": "^6.1.1",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.24",
    "browserslist": "^4.28.1",
    "cssnano": "^7.1.2",
    "lightningcss": "^1.31.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-lightningcss": "^1.0.2",
    "postcss-preset-env": "^11.1.2",
    "tailwindcss": "^4.1.18",
    "terser": "^5.46.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vitest": "^4.0.17"
  }
}
